<!doctype html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>NIKHIL SCARIA</title>
    <link rel="stylesheet" href="/styles/homepage.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet"
        crossorigin="anonymous">
    <link rel="stylesheet" href="https://unpkg.com/aos@next/dist/aos.css">
    <script src="https://kit.fontawesome.com/74dae4b90e.js" crossorigin="anonymous"></script>
    <link href='https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css' rel='stylesheet'>
</head>

<body style="background-color: #282a36">
    <style>
        #gotolearn {
            position: absolute;
            bottom: 5px;
            left: 7rem;
            text-decoration: none
        }

        .card-title {
            text-shadow: 2px 2px 2px #464343;
        }

        .mgr {
            height: 43rem;
        }
    </style>
    <header>
        <nav class="nav nav-pills nav-fill gap-2 p-1 small bg-dark rounded-3 shadow-sm" id="pillNav2" role="tablist">
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#collapseExample"
                aria-controls="collapseExample" aria-expanded="false" aria-label="Toggle navigation">
                <box-icon class="box-icon" name='menu' flip='vertical' color='#fffbfb'></box-icon>
            </button>


            <button class="nav-link rounded-2" id="contact-tab2" data-bs-toggle="tab" type="button" role="tab"
                aria-selected="false">
                <a class="logout bg-dark" href="/homepage">Home</a>
                <button class="nav-link rounded-2" id="contact-tab2" data-bs-toggle="tab" type="button" role="tab"
                    aria-selected="false">
                    <a class="logout bg-dark" href="#">Profile</a>
                </button>

                <button class="nav-link rounded-2" id="contact-tab2" data-bs-toggle="tab" type="button" role="tab"
                    aria-selected="false">
                    <a class="logout bg-dark" href="/interview">Interview Questions</a>
                </button>
                <div class="dropdown">
                    <button class="btn btn-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown"
                        aria-expanded="false">
                        More
                    </button>
                    <ul class="dropdown-menu">
                        <li><a class="dropdown-item" href="#">About</a></li>
                        <li><a class="dropdown-item" href="/signout">LogOut</a></li>
                    </ul>
                </div>
                <form class="d-flex" role="search" action="/search" method="GET">
                    <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search"
                        name="query">
                    <button class="btn btn-outline-success" type="submit">Search</button>
                </form>

        </nav>

    </header>
    <!-- Toggler Button -->
    <!-- Toggler Button -->



    <!-- Collapsed content with close button -->
    <div class="collapse" id="collapseExample">
        <button class="btn btn-secondary" type="button" data-bs-toggle="collapse" data-bs-target="#collapseExample"
            aria-expanded="false" aria-controls="collapseExample">
            Close
        </button>
        <ul class="nav flex-column">
            <li class="nav-item">
                <a class="nav-link" href="/homepage">HTML and CSS</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="/programming">Programming</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="/serverside">Server Side</a>
            </li>
        </ul>

    </div>

    <main class="container text-center">
        <div class="row row-cols-1 row-cols-md-4 g-4" data-aos="zoom-in-up">
            {{#each list}}
            <div class="mgr">
                <div class="card h-100">
                    <img src="homeimage/careerleap.png" class="card-img-top" alt="...">
                    <div class="card-body">
                        <h5 class="card-title">{{this.course}}</h5>
                        <p class="card-text">{{this.duration}}</p>
                        <p class="card-text">{{this.description}}</p>
                        <a href="{{this.link}}" id="gotolearn" class="btn btn-primary">Go To Learn</a>
                    </div>
                </div>
            </div>
            {{/each}}
        </div>
    </main>



    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-ENjdO4Dr2bkBIFxQpeoTz1HIcje39Wm4jDKdf19U8gI4ddQ3GYNS7NTKfAdVQSZe"
        crossorigin="anonymous"></script>
    <script src="https://unpkg.com/boxicons@2.1.4/dist/boxicons.js"></script>
    <script src="https://unpkg.com/aos@next/dist/aos.js"></script>
    <script src="script.js"></script>
    <script>
        AOS.init();
    </script>
</body>

</html>